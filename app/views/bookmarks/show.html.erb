<h1><%= @bookmark.url %></h1>


   <div class="col-md-4">

     <%= link_to "Edit", edit_bookmark_path(@bookmark), class: 'btn btn-success' %>
     <%= link_to "Delete bookmark", @bookmark, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
   </div>


 <div class="row">
   <div class="col-md-8">
     <p class="lead"><%= @bookmark.url %></p>

     <% @topic.bookmarks.each do |bookmark| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
           </h4>
           <small>
              submitted <%= time_ago_in_words(bookmark.created_at) %> ago <br>
              <%= topic.bookmarks.count %> bookmarks

            </small>

         </div>
       </div>

   </div>
 <% end %>
   <div class="col-md-4">
     <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>

   </div>
 </div>
