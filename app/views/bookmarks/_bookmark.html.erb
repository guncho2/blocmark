<div class="media-body">
     <h4 class="media-heading">
       <%= link_to bookmark.url, topic_bookmark_path(bookmark.topic, bookmark) %>
     </h4>
     <div class="col-md-8">
     <h3><%= @topic.bookmark %></h3>
     <%= link_to "Edit", new_bookmark_path, class: 'btn btn-success' %>
     <%= link_to "Delete", bookmark, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this bookmark?' } %
     <div class="col-md-8">
       <%= form_for [@bookmark.topic, @bookmark] do |f| %>
       <div class="form-group">
         <%= f.label :url %>
         <%= f.text_field :url, class: 'form-control', placeholder: "Bookmark URL" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
       <% end %>
     </div>
     </div>

   </div>
