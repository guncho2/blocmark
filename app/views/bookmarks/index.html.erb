<h1>bookmarks</h1>

<div class="row">
	<div class="col-md-8">

		<% @bookmarks.each do |bookmark| %>
			<div class="media">
				<div class="media-body">
					<h4 class="media-heading">

						<%= link_to bookmark.url, @bookmark %>
					</h4>
					<small>
						<%= bookmark.url %>
					</small>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-md-4">

		<%= link_to "New bookmark", new_topic_bookmark_path, class: 'btn btn-success' %>
	</div>
</div>
